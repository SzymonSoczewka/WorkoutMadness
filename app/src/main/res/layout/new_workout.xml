<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Create new workout"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select days:"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/monday_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#322121"
            android:buttonTint="@color/primaryColor"
            android:text="Monday"
            android:textColorHighlight="@color/primaryColor" />

        <CheckBox
            android:id="@+id/tuesday_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primaryColor"
            android:text="Tuesday" />

        <CheckBox
            android:id="@+id/wednesday_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primaryColor"
            android:text="Wednesday" />

        <CheckBox
            android:id="@+id/thursday_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primaryColor"
            android:text="Thursday" />

        <CheckBox
            android:id="@+id/friday_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primaryColor"
            android:text="Friday" />

        <CheckBox
            android:id="@+id/saturday_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primaryColor"
            android:text="Saturday" />

        <CheckBox
            android:id="@+id/sunday_box"
            style=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/primaryColor"
            android:text="Sunday" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>